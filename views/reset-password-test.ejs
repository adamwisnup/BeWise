<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap");

      body {
        font-family: "Roboto", sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #2b59c3, #253c78);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #fff;
        animation: gradientShift 5s infinite alternate;
      }

      @keyframes gradientShift {
        from {
          background: linear-gradient(135deg, #253c78, #2b59c3);
        }
        to {
          background: linear-gradient(135deg, #2b59c3, #253c78);
        }
      }

      .container {
        width: 360px;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        text-align: center;
        color: #333;
        transform: scale(1);
        transition: transform 0.3s ease-in-out;
      }

      .container:hover {
        transform: scale(1.05);
      }

      h1 {
        margin-bottom: 20px;
        font-size: 28px;
        color: #253c78;
      }

      form {
        display: flex;
        flex-direction: column;
      }

      label {
        margin-bottom: 8px;
        font-size: 14px;
        color: #555;
        text-align: left;
      }

      input {
        padding: 12px 20px;
        margin-bottom: 16px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        transition: border 0.3s, box-shadow 0.3s;
      }

      input:focus {
        border-color: #ba2025;
        box-shadow: 0 0 10px rgba(186, 32, 37, 0.5);
        outline: none;
      }

      button {
        padding: 12px;
        background-color: #ecfeaa;
        color: #000000;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
      }

      button:hover {
        background-color: #afbc7e;
        transform: translateY(-2px);
      }

      /* Animasi untuk input */
      input:focus {
        border-color: #ba2025;
        box-shadow: 0 0 8px rgba(186, 32, 37, 0.5);
        transition: all 0.3s ease-in-out;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Reset Password</h1>
      <form class="resetPass-form" action="" method="post">
        <label for="password">New Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="*******"
          required
        />
        <label for="confirmPassword">Confirm New Password:</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          placeholder="*******"
          required
        />
        <button type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
